<%= simple_form_for(@airport) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :country %>
    <%= f.input :iata_code %>
    <%= f.input :name %>
    <%= f.input :city_name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
