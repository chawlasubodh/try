<%- model_class = Airport -%>
<div class="page-header">
  <h1><%=t '.title', :default => Airport %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:iata_code) %></dt>
      <dd><pre class="prettyprint"><%= @airport.iata_code %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @airport.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:city_name) %></dt>
      <dd><pre class="prettyprint"><%= @airport.city_name %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              airports_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_airport_path(@airport), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              airport_path(@airport),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

