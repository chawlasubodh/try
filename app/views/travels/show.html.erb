<%- model_class = Travel -%>
<div class="page-header">
  <h1><%=t '.title', :default => Travel %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:from) %></dt>
      <dd><pre class="prettyprint"><%= @travel.from %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:to) %></dt>
      <dd><pre class="prettyprint"><%= @travel.to %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:total_award_miles) %></dt>
      <dd><pre class="prettyprint"><%= @travel.total_award_miles %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @travel.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:remarks) %></dt>
      <dd><pre class="prettyprint"><%= @travel.remarks %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:class) %></dt>
      <dd><pre class="prettyprint"><%= @travel.class %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:segment) %></dt>
      <dd><pre class="prettyprint"><%= @travel.segment %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:level) %></dt>
      <dd><pre class="prettyprint"><%= @travel.level %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              travels_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_travel_path(@travel), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              travel_path(@travel),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

