<%= form_for @travel, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :from, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.date_select :from, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :to, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.date_select :to, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :total_award_miles, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :total_award_miles, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :name, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :remarks, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :remarks, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :class, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :class, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :segment, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :segment, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :level, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :level, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  travels_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
