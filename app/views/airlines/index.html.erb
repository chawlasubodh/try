<%- model_class = Airline -%>
<div class="page-header">
  <h1><%=t '.title', :default => Airline %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:mileage_program) %></th>
      <th><%= model_class.human_attribute_name(:iata_code) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @airlines.each do |airline| %>
      <tr>
        <td><%= airline.id %></td>
        <td><%= airline.mileage_program %></td>
        <td><%= airline.iata_code %></td>
        <td><%= airline.name %></td>
        <td><%=l airline.created_at, format: :long %></td>
        <td>
          <%= link_to airline_path(airline), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to airline_path(airline), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_airline_path,
            :class => 'btn btn-primary' %>
